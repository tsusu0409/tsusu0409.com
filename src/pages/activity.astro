---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Activity from "../components/Activity.astro";

// アクティビティの一覧取得
const allActivities = await Astro.glob('./activity/*.md')
---

<html lang="jp">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/images/prof-icon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Tsusu</title>
	</head>
	<body>
		<div>
			<Header />

            <div class="mt-6 mb-12 w-4/5 mx-auto">  
                <h1 class="text-3xl font-geo font-thin">Activities</h1>
				<div class="px-6 py-8 font-zen">
	                <p>
						経歴や過去にやったことを掲載します。<br><br><br>
						＊＊＊＊＊＊＊＊＊＊
						このページは現在準備中です。
						＊＊＊＊＊＊＊＊＊＊
					</p>
				</div>
            </div>

			<div class="my-20 pb-8">
				<div class="w-4/5 mx-auto mb-12">
					<h2 class="text-2xl font-geo font-thin">All Activities</h2>
					<div class="mx-6">
						{[...allActivities].reverse().map((activity:any) => (
							<Activity
							title={activity.frontmatter.title}
							description={activity.frontmatter.description}
							startDate={activity.frontmatter.startDate}
							endDate={activity.frontmatter.endDate}
							/>
						))}
					</div>
				</div>
			</div>
			
			<Footer />
		</div>
	</body>
</html>
